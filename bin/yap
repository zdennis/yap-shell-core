#!/usr/bin/env ruby
require 'pry'

file = __FILE__
if File.symlink?(file)
  file = File.readlink(file)
end

class SuspendSignalError < StandardError
end

trap("SIGTSTP") do
  raise SuspendSignalError
end

$LOAD_PATH << File.dirname(file) + '/../lib'

# loop do
  load "lagniappe.rb"
  load "lagniappe/shell.rb"
  begin
    Yap.run_console
  rescue StandardError => ex
    puts ex.message
    puts ex.backtrace
  end
# end
