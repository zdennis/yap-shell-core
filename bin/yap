#!/usr/bin/env ruby
file = __FILE__
if File.symlink?(file)
  file = File.readlink(file)
end

class SuspendSignalError < StandardError
end

trap("SIGTSTP") do
  raise SuspendSignalError
end

$LOAD_PATH << File.dirname(file) + '/../lib'

# loop do
  load "yap.rb"
  begin
    Yap.run_shell
  rescue StandardError => ex
    puts ex.message
    puts ex.backtrace
  end
# end
